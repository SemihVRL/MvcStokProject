@using MvcStokProject.Models.Entity


@model List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ ADI</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@urn.MARKA</td>
                <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                <td>@urn.FİYAT</td>
                <td>@urn.STOK</td>
                <td style="width:10px"><a href="/Urun/Sil/@urn.URUNID" class="btn btn-danger">SİL</a></td>
                <td style="width:10px"><a href="/Urun/UrunGetir/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
                
            </tr>


        }
    </tbody>
</table>

<br />
<a class="btn btn-primary" href="/Urun/UrunEkle">YENİ ÜRÜN EKLE</a>
<br />

<script type="text/javascript" src="https:////cdn.datatables.net/2.0.2/js/dataTables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<script>
    $('#tbl1').DataTable();
</script>