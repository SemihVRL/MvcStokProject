@using MvcStokProject.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musterı", FormMethod.Get))
{
    <p>
        <b>Aranıcak Müşteri Adı:</b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
    
}
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT(SORU İLE SİLME İŞLEMİ)</th>

    </tr>

    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYADI</td>
                <td style="width:10px"><a href="/Musterı/Sil/@mstr.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td style="width:10px"><a href="/Musterı/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td style="width:10px">@Html.ActionLink("Sil", "Sil", new { id = mstr.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('GERÇEKTEN SİLMEK İSTİYOR MUSUN')" })</td>

            </tr>
        }
    </tbody>
</table>


<a href="/Musterı/MusteriEkle" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>


